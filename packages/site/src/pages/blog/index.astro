---
import { getCollection } from 'astro:content'
import Layout from '../../layouts/Layout.astro'
const blogCollection = await getCollection('blog')
---

<Layout title="Blog">
	<h1>Blog</h1>

	<ul>
		{
			blogCollection.map((post) => (
				<li>
					{post.data.title}
					{post.data.date.toLocaleDateString()}
				</li>
			))
		}
	</ul>
</Layout>
